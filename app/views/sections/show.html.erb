<%= link_to "<< Back", {:action => "list", :page_id => @page.id}, :class => "back-link" %>
<div class="section show">
	<h2>Show Sections</h2>
	
	<table summary="section detail view">
		<tr>
			<th>Name</th>
			<td><%= @sections.name %></td>
		</tr>
		<tr>
			<th>Parent Subject</th>
			<td><%= @sections.page.subject.name %></td>
		</tr>
		<tr>
			<th>Parent Page</th>
			<td><%= @sections.page.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @sections.position %></td>
		</tr>
		<tr>	
			<th>Visible ?</th>
			<td><%= @sections.visible ? "Yes" : "No" %></td>
		</tr>
		<tr>	
			<th>Content Type</th>
			<td><%= @sections.content_type %></td>
		</tr>
		<tr>	
			<th>Content</th>
			<td><%= @sections.content %></td>
		</tr>
		<tr>		
			<th>Created at</th>
			<td><%= @sections.created_at %></td>
		</tr>
		<tr>		
			<th>Updated at</th>
			<td><%= @sections.updated_at %></td>
		</tr>
	</table>
</div>