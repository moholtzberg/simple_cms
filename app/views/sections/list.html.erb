<% @page_title = "Section List!" %>

<div class="section list">
	<h2>Section</h2>
<%= link_to "Add a new Section", {:action => "new", :page_id => @page.id}, :class => "action new" %>		
	<table class="listing" summary="Sections List">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Subject</th>
			<th>Page</th>
			<th>Visible</th>
			<th>Content Type</th>
			<th>Actions</th>
		</tr>
		<% @sections.each do |section| %>
		<tr class="<%= cycle("odd", "even") %>">
			<td><%= section.position %></td>
			<td><%= section.page.subject.name %></td>
			<td><%= section.page.name %></td>
			<td class="center"><%= section.visible ? "Yes" : "No" %></td>
			<td class="center"><%= section.content_type %></td>
			<td class="actions">
				<%= link_to("Show", {:action => "show", :id => section.id, :page_id => @page.id}, :class => "action show")%>
				<%= link_to("Edit", {:action => "edit", :id => section.id, :page_id => @page.id}, :class => "action edit")%>
				<%= link_to("Delete", {:action => "delete", :id => section.id, :page_id => @page.id}, :class => "action delete")%>
			</td>
		</tr>
		<% end %>
	</table>
</div>