<% @page_title = "Admin Users List!" %>

<div class="admin users list">
	<h2>Pages</h2>
<%= link_to "Add a new Admin User", {:action => "new"}, :class => "action new" %>
	<table class="listing" summary="Admin Users List">
		<tr class="header">
			<th>Name</th>
			<th>Username</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
		<% @admin_users.each do |user| %>
		<tr class="<%= cycle("odd", "even") %>">
			<td><%= user.full_name %></td>
			<td><%= user.username %></td>
			<td><%= mail_to(user.email) %></td>
			<td class="actions">
				<%= link_to("Show", {:action => "show", :id => user.id}, :class => "action show")%>
				<%= link_to("Edit", {:action => "edit", :id => user.id}, :class => "action edit")%>
				<%= link_to("Delete", {:action => "delete", :id => user.id}, :class => "action delete")%>
			</td>
		</tr>
		<% end %>
	</table>
	
</div>
