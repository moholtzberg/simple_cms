<%= error_messages_for(@pages) %>

<table summary="Page form fields">
	<tr>
		<th>Name</th>
		<td><%= f.text_field(:name) %></td>
	</tr>
	<tr>
		<th>Subject</th>
		<td><%= f.select(:subject_id, @subjects) %></td>
	</tr>
	<tr>
		<th>Position</th>
		<td><%= f.select(:position, 1..@pages_count) %></td>
	</tr>
	<tr>	
		<th>Permalink</th>
		<td><%= f.text_field(:permalink) %></td>
	</tr>
	<tr>	
		<th>Visible ? </th>
		<td><%= f.text_field(:visible) %></td>
	</tr>
</table>