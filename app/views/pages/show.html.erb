<%= link_to "<< Back", {:action => "list", :subject_id => @subject.id}, :class => "back-link" %>
<div class="page show">
	<h2>Show Subject</h2>
	
	<table summary="page detail view">
		<tr>
			<th>Name</th>
			<td><%= @pages.name %></td>
		</tr>
		<tr>
			<th>Parent Subject</th>
			<td><%= @pages.subject.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @pages.position %></td>
		</tr>
		<tr>	
			<th>Visible ? </th>
			<td><%= @pages.visible ? "Yes" : "No" %></td>
		</tr>
		<tr>		
			<th>Created at</th>
			<td><%= @pages.created_at %></td>
		</tr>
		<tr>		
			<th>Updated at</th>
			<td><%= @pages.updated_at %></td>
		</tr>
	</table>
</div>